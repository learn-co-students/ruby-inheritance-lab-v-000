#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach
other_avi_genius = avi.teach

steve.learn(some_knowledge)
steve.learn(other_avi_genius)

jane = Student.new
jane.first_name = "Jane"
jane.last_name = "Fonda"

jane.learn(avi.teach)
jane.learn(avi.teach)
jane.learn(avi.teach)

puts steve.knowledge
puts jane.knowledge

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' and #{other_avi_genius} from Avi"

