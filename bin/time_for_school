#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombom"


some_knowledge = avi.teach 

steve.learn(some_knowledge)

more_knowledge = avi.teach

steve.learn(more_knowledge)

aaron = Student.new
aaron.first_name = "Aaron"
aaron.last_name = "Mahan"

lesson_one = avi.teach

aaron.learn(lesson_one)

lesson_two = avi.teach
aaron.learn(lesson_two)

Student.all.each do |student|
  puts "#{student.first_name} just learned this important knowledge: '#{student.knowledge.join("; ")}' from Avi."
end

#puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

