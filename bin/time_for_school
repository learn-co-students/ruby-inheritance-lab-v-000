#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Jackson"

mark = Student.new
mark.first_name = "Mark"
mark.last_name = "Zuckerberg"

some_knowledge = avi.teach 

5.times do
  steve.learn(some_knowledge)
  mark.learn(some_knowledge)
end

puts "Steve learned all this important knowledge from Avi: '#{steve.knowledge}'"
puts "Mark learned all this important knowledge from Avi: '#{mark.knowledge}'"
